<?xml version="1.0" encoding="UTF-8"?>

<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="ehcache.xsd"
         updateCheck="true" monitoring="autodetect"
         dynamicConfig="true" name="cache_simple">

    <diskStore path="java.io.tmpdir"/>
    

    <defaultCache
            maxElementsInMemory="10000"
            eternal="false"
            timeToLiveSeconds="43200"
            overflowToDisk="false"
            diskPersistent="false"
            memoryStoreEvictionPolicy="LRU"
            statistics="false"
            />



    <cache name="org.cl.demo.entity.Tag"
           maxElementsInMemory="10000"
           eternal="true"
           overflowToDisk="false"
           memoryStoreEvictionPolicy="LFU"
            />

    <cache name="org.cl.demo.entity.Utilisateur"
           maxElementsInMemory="10000"
           eternal="true"
           overflowToDisk="false"
           memoryStoreEvictionPolicy="LFU"
            />

    <cache name="org.cl.demo.entity.Favoris"
           maxElementsInMemory="10000"
           eternal="false"
           overflowToDisk="false"
           timeToLiveSeconds="43200"           
           memoryStoreEvictionPolicy="LFU"
            />

    <cache name="org.cl.demo.entity.Favoris.tags"
           maxElementsInMemory="10000"
           eternal="false"
           overflowToDisk="false"
           timeToLiveSeconds="43200"           
           memoryStoreEvictionPolicy="LFU"
            />

<!--
cache de requette 
 -->

<!-- TTL toujours plus elevÃ© que tout les caches de requette -->
    <cache name="org.hibernate.cache.UpdateTimestampsCache"
           maxElementsInMemory="10000"
           eternal="true"
           overflowToDisk="false"
           memoryStoreEvictionPolicy="LFU"
            />


    <cache name="org.hibernate.cache.StandardQueryCache"
           maxElementsInMemory="10000"
           eternal="false"
           overflowToDisk="false"
           timeToLiveSeconds="43200"           
           memoryStoreEvictionPolicy="LFU"
            />

</ehcache>
